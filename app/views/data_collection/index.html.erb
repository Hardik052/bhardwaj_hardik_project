<%= form_tag data_collection_path, method: :get do %>
  <%= text_field_tag :search, params[:search], placeholder: "Search..." %>
  <%= submit_tag "Search" %>
<% end %>
<h1 class="display-1">Data Collection</h1>
<table class="table table-striped">
  <thead>
    <tr>
      <th>Author</th>
      <th>Content</th>
    </tr>
  </thead>
  <tbody>
    <% @data_collection.each do |quote| %>
      <tr>
        <td><%= quote.author.name %></td>
        <td><%= quote.content %></td>
        <td><%= link_to 'View', data_entry_path(id: quote.id) if quote.present? %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<nav aria-label="Page navigation example">
<ul class = "pagination">
<li class = "page-item">
<%= paginate @data_collection%>
</li>
</ul>
</nav>